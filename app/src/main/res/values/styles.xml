<resources>

    <style name="MaterialButtonContainedStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">@dimen/no_spacing</item>
        <item name="android:insetBottom">@dimen/no_spacing</item>
        <item name="android:insetRight">@dimen/no_spacing</item>
        <item name="android:insetLeft">@dimen/no_spacing</item>
        <item name="android:minWidth">@dimen/no_spacing</item>
        <item name="android:minHeight">@dimen/no_spacing</item>
        <item name="android:includeFontPadding">false</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="MaterialButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">@dimen/no_spacing</item>
        <item name="android:insetBottom">@dimen/no_spacing</item>
        <item name="android:insetRight">@dimen/no_spacing</item>
        <item name="android:insetLeft">@dimen/no_spacing</item>
        <item name="android:minWidth">@dimen/no_spacing</item>
        <item name="android:minHeight">@dimen/no_spacing</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="MaterialButtonTextStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">@dimen/no_spacing</item>
        <item name="android:insetBottom">@dimen/no_spacing</item>
        <item name="android:insetRight">@dimen/no_spacing</item>
        <item name="android:insetLeft">@dimen/no_spacing</item>
        <item name="android:minWidth">@dimen/no_spacing</item>
        <item name="android:minHeight">@dimen/no_spacing</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>


</resources>
